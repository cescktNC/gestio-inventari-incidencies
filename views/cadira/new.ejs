<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('../partials/head'); %>
</head>

<body class="container">

	<header>
		<%- include('../partials/header'); %>
	</header>
	<main>
		<div class="card mt-2" style="width: 60%;">
			<div class="card-body">
				<h5 class="card-title"><strong>New Cadira</strong></h5>


				<form method="POST" action="/cadira/create">
					<div class="form-group">
						<label for="numeroCadira">numeroCadira</label>
						<input type="number" name="numeroCadira" class="form-control">
					</div>
					<div class="form-group">
						<label for="codiSessio">codiSessio</label>
						<select type="text" name="codiSessio" class="form-control">
							<% sessioList.forEach(function(codiSessio) { %>
								<option value="<%= codiSessio.id %>">
									<%= codiSessio.codi %>
								</option>
							<% }); %>
						</select>
					</div>

					<button type="submit" class="btn btn-primary">Save</button>

				</form>

				<% if (typeof error !=="undefined" ) { %>
					<div class="alert alert-primary mt-2" role="alert">
						<p>
							<%= error %>
						</p>
					</div>
				<% } %>

			</div>


	</main>

	<footer>
		<%- include('../partials/footer'); %>
	</footer>

</body>

</html>