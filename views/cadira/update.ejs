<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>

	<div class="card mt-4">
	  <div class="card-header">
	     <h5 class="card-title">Edit Cadira</h5>
	  </div>
	  <div class="card-body">
	
		<form method="POST" action="/cadira/update/<%= Cadira._id %>">
			<div class="form-group">
				 <label for="numeroCadira">numeroCadira</label>
				<input type="number" name="numeroCadira" class="form-control" min="1" value="<%= Cadira.nom %>">
			</div>

            <button type="submit" class="btn btn-primary">Save
			</button>
			<a class="btn btn-danger" href="/cadira/delete/<%= Cadira._id %>" role="button">Delete</a>

		</form>

		<% if (typeof error !== "undefined") { %>
			<div class="alert alert-primary mt-2" role="alert">
			    <p><%= error %></p>
			</div>
		<% } %>

		<% if (typeof message !== "undefined") { %>
			<div class="alert alert-primary mt-2" role="alert">
			    <p><%= message %></p>
			</div>
		<% } %>

	</div>
		
	</div>

</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>