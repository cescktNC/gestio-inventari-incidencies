<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <div class="card mt-2">
            <div class="card-body">
                <h5 class="card-title">Informaci√≥ dels exemplars</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Codi</th>
                            <th scope="col">Demarca</th>
                            <th scope="col">Codi del Material</th>
                            <th scope="col">Codi de la Localitzacio</th>
                            <th scope="col">Imatge</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>
                                <%= exemplar.codi %>
                            </td>
                            <td>
                                <%= exemplar.demarca %>
                            </td>
                            <td>
                                <%= exemplar.codiMaterial.nom %>
                            </td>
                            <td>
                                <%= exemplar.codiLocalitzacio.nom %>
                            </td>
                            <td>
                                <img class="w-25" src="../../<%= exemplar.codiMaterial.fotografia %>" alt="<%= exemplar.codiMaterial.nom %>">
                            </td>
                            <td>
                                <a class="btn btn-secondary" href="/exemplar/update/<%=exemplar._id%>"
                                    class="card-link">Edit</a>
                                    <a class="btn btn-info" href="data:image/svg+xml;utf8,<%=encodeURIComponent(exemplar.qr)%>" 
                                    download="qr.svg" class="card-link">Descargar</a>
                            </td>


                        </tr>

                    </tbody>
                </table>


            </div>

        </div>

    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>