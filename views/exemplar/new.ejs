<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title">Nou Exemplar</h5>
            </div>
            <div class="card-body">

                <form method="POST" action="/exemplar/create">
                    <div class="form-group">
                        <label for="codi">Codi</label>
                        <input type="text" name="codi" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="demarca">Demarca</label> <br>
                        <input type="checkbox" id="true" name="demarca" value="true">True<br>
                        <input type="checkbox" id="false" name="demarca" value="false">False

                    </div>
                    <div class="form-group">
                        <label for="codiMaterial">codiMaterial</label>
                        <select type="text" name="codiMaterial" class="form-control">
                            <% materialList.forEach(function(material) { %>
                                <option value="<%= material.id %>">
                                    <%= material.nom %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="codiLocalitzacio">CodiLocalitzacio</label>
                        <select type="text" name="codiLocalitzacio" class="form-control">
                            <% localitzacioList.forEach(function(localitzacio) { %>
                                <option value="<%= localitzacio.id %>">
                                    <%= localitzacio.nom %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>

                <% if (typeof error !=="undefined" ) { %>
                    <div class="alert alert-primary mt-2" role="alert">
                        <p>
                            <%= error %>
                        </p>
                    </div>
                <% } %>

            </div>
        </div>


    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>