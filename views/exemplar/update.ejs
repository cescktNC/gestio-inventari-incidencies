<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('../partials/head'); %>
</head>

<body class="container">

	<header>
		<%- include('../partials/header'); %>
	</header>

	<main>

		<div class="card mt-4">
			<div class="card-header">
				<h5 class="card-title">Edit Exemplar</h5>
			</div>
			<div class="card-body">

				<form method="POST" action="/exemplar/update/<%= Exemplar._id %>">
					<div class="form-group">
						<label for="codi">Codi</label>
						<input type="text" name="codi" class="form-control" value="<%= Exemplar.codi %>">
					</div>
					<div class="form-group">
						<label for="demarca">Demarca</label><br>
						<input type="checkbox" name="demarca" id="true" value="true">True
					</div>

					<button type="submit" class="btn btn-primary">Save
					</button>
					<a class="btn btn-danger" href="/exemplar/delete/<%= Exemplar._id %>" role="button">Delete</a>

				</form>

				<% if (typeof error !=="undefined" ) { %>
					<div class="alert alert-primary mt-2" role="alert">
						<p>
							<%= error %>
						</p>
					</div>
				<% } %>

				<% if (typeof message !=="undefined" ) { %>
					<div class="alert alert-primary mt-2" role="alert">
						<p>
							<%= message %>
						</p>
					</div>
				<% } %>

			</div>

		</div>

	</main>

	<footer>
		<%- include('../partials/footer'); %>
	</footer>

</body>

</html>