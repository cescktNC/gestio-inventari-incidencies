<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="card mt-2">
            <div class="card-body">
                <h5 class="card-title">Incidencia</h5>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">codi</th>
                            <th scope="col">seguiment</th>
                            <th scope="col">estat</th>
                            <th scope="col">data</th>
                            <th scope="col">proposta</th>
                            <th scope="col">prioritat</th>
                            <th scope="col">descripció</th>
                            <th scope="col">ubicació</th>
                            <th scope="col">Material</th>
                            <th scope="col">Localització</th>
                            <th scope="col">
                                <a href="/incidencies/create" class="btn btn-primary">New</a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% list.forEach(function(incidencia) { %>
                            <tr>
                                <td>
                                    <%= incidencia.codi %>
                                </td>
                                <td>
                                    <%= incidencia.seguiment %>
                                </td>
                                <td>
                                    <%= incidencia.estat %>
                                </td>
                                <td>
                                    <%= incidencia.formatarDate %>
                                </td>
                                <td>
                                    <%= incidencia.proposta %>
                                </td>
                                <td>
                                    <%= incidencia.prioritat %>
                                </td>
                                <td>
                                    <%= incidencia.descripcio %>
                                </td>
                                <td>
                                    <%= incidencia.ubicacio %>
                                </td>
                                <td>
                                    <% list_mat.forEach(function(material) { if(incidencia.codiExemplar[0].codiMaterial == material.id) {%>
                                        <%= material.nom %>
                                    <% }}); %>
                                </td>
                                <td>
                                    <%= incidencia.codiLocalitzacio[0].nom %>
                                </td>
                                <td>
                                    <a href="/incidencies/update/<%=incidencia._id%>" class="btn btn-secondary">Edit</a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>


            </div>

        </div>

    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>