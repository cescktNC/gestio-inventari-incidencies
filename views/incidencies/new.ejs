<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title">Nova Incidencia</h5>
            </div>
            <div class="card-body">

                <form method="POST" action="/incidencies/create">
                    <div class="form-group">
                        <label for="codiExemplar"> Codi del exemplar</label>
                        <input type="text" name="codiExemplar" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="ubicacio">Ubicació</label>
                        <textarea name="ubicacio" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="codiLocalitzacio">localització</label>
                        <select type="text" name="codiLocalitzacio" class="form-control">
                            <% list_loc.forEach(function(localitzacio) { %>
                                <option value="<%= localitzacio.id %>">
                                    <%= localitzacio.nom %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="tipologia">Tipologia</label>
                        <select name="tipologia" class="form-control">
                            <option value=" " selected>
                                Selecciona la tipologia
                            </option>
                            <% list_tip.forEach(function(tipologia) { %>
                                    <option value="<%= tipologia %>">
                                        <%= tipologia %>
                                    </option>
                                <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="descripcio">descripció</label>
                        <input type="text" name="descripcio" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="prioritat">prioritat</label>
                        <select name="prioritat" class="form-control">
                            <% list_prio.forEach(function(prioritat) { if(prioritat == 'Mitjana' ){%>
                                <option value="<%= prioritat %>" selected>
                                    <%= prioritat %>
                                </option>
                                <% } else {%>
                                    <option value="<%= prioritat %>">
                                        <%= prioritat %>
                                    </option>
                                <% }}); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Save
                    </button>
                </form>

                <% if (typeof error !== "undefined" ) { %>
                    <div class="alert alert-primary mt-2" role="alert">
                        <p>
                            <%= error %>
                        </p>
                    </div>
                <% } %>

            </div>
        </div>


    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>