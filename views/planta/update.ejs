<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('../partials/head'); %>
</head>

<body class="container">

	<header>
		<%- include('../partials/header'); %>
	</header>

	<main>

		<div class="card mt-4">
			<div class="card-header">
				<h5 class="card-title">Edit Planta</h5>
			</div>
			<div class="card-body">

				<form method="POST" action="/planta/update/<%= Planta._id %>" enctype="multipart/form-data">
					<div class="form-group">
						<label for="codi">Codi</label>
						<input type="number" name="codi" class="form-control" value="<%= Planta.codi %>">
					</div>
					<div class="form-group">
						<label for="planol">Planol</label>
						<input type="file" name="planol" accept="image/png, .jpeg, .jpg" class="form-control">
					</div>

					<button type="submit" class="btn btn-primary">Save
					</button>
					<a class="btn btn-danger" href="/planta/delete/<%= Planta._id %>" role="button">Delete</a>

				</form>

				<% if (typeof error !=="undefined" ) { %>
					<div class="alert alert-primary mt-2" role="alert">
						<p>
							<%= error %>
						</p>
					</div>
				<% } %>

				<% if (typeof message !=="undefined" ) { %>
					<div class="alert alert-primary mt-2" role="alert">
						<p>
							<%= message %>
						</p>
					</div>
				<% } %>

			</div>

		</div>

	</main>

	<footer>
		<%- include('../partials/footer'); %>
	</footer>

</body>

</html>