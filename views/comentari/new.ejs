<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title">Nou Comentari</h5>
            </div>
            <div class="card-body">

                <form method="POST" action="/comentari/create">
                    <div class="form-group">
                        <label for="descripcio">Comentari</label>
                        <input type="text" name="descripcio" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="codiUsuari">Usuari</label>
                        <select type="text" name="codiUsuari" class="form-control">
                            <% list.forEach(function(usuari) { %>
                                <option value="<%= usuari.id %>">
                                    <%= usuari.nom %>
                                </option>
                            <% }); %>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Save
                    </button>
                </form>

                <% if (typeof error !=="undefined" ) { %>
                    <div class="alert alert-primary mt-2" role="alert">
                        <p>
                            <%= error %>
                        </p>
                    </div>
                <% } %>

            </div>
        </div>


    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>